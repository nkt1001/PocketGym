<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/semitransparent_black"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/darker_grey"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:drawable="@drawable/ic_delete"
        android:gravity="center"/>
    <item>
        <selector>
            <item android:drawable="@color/semitransparent_black" android:state_pressed="true"/>
            <item android:drawable="@android:color/transparent"/>
        </selector>
    </item>

</layer-list>